WindowManager:
    FirstWindow:
        id: first    # te id trzeba pododawać by działały
    SecondCheckWindow:
        id: second_check
    SecondMenuWindow:
        id: second_menu
    KatnatarciaWindow:
        id: katnatarcia
    KsztaltWindow:
        id: ksztalt
    RodzajWindow:
        id: rodzaj
    TolerancjaWindow:
        id: tolerancja
    GruboscWindow:
        id: grubosc

<FirstWindow>:
    name: "first"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height


        Label:
            id: word_start_label
            text_size: self.size
            halign: "center"
            valign: "middle"
            text: "Dokonaj wyboru"
            font_size: 24

        Button:
            text: "Sprawdź oznaczenie"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"
        Button:
            text: "Dodawanie"
            on_release:
                app.root.current = "third"
                root.manager.transition.direction = "left"

<SecondCheckWindow>:
    name: "second"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: word_label
            text_size: self.size
            halign: "center"
            valign: "middle"
            text: "Wpisz oznaczenie płytki by otrzymać informacje na jej temat"
            font_size: 24

        TextInput:
            id: word_input3
            multiline: False
            size_hint: (1, .5)

        Button:
            size_hint: (1, .5)
            text: "Check"
            on_press: app.check()

        Button:
            text: "Cofnij"
            size_hint: (1, .5)
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"  # by przy kliknięciu ekran tak jakby nie przesuwał się
                # w prawo, tylko w lewo, czyli tak jakby cofał
<SecondMenuWindow>:
    name: "third"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            id: word_label_dodaj
            text_size: self.size
            halign: "center"
            valign: "middle"
            text: "Co chcesz dodać"
            font_size: 24

        Button:
            size_hint: (1, .5)
            text: "Dodaj kształt płytki do bazy"
            on_release:
                app.root.current = "ksztalt"
                root.manager.transition.direction = "left"

        Button:
            text: "Dodaj do bazy oznaczenie kątu natarcia płytki"
            on_release:
                app.root.current = "katnatarcia"
                root.manager.transition.direction = "left"

        Button:
            text: "Dodaj do bazy oznaczenie tolerancji płytki"
            on_release:
                app.root.current = "tolerancja"
                root.manager.transition.direction = "left"

        Button:
            text: "Dodaj do bazy oznaczenie rodzaju płytki"
            on_release:
                app.root.current = "rodzaj"
                root.manager.transition.direction = "left"

        Button:
            text: "Dodaj do bazy oznaczenie grubosci płytki"
            on_release:
                app.root.current = "grubosc"
                root.manager.transition.direction = "left"

        Button:
            text: "Cofnij"
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"

<KsztaltWindow>:
    name: "ksztalt"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            id: word_label_dodaj
            text_size: self.size
            halign: "center"
            valign: "middle"
            text: "Uzupełnij dane na temat kształtu płytki"
            font_size: 24
        GridLayout:
            cols: 2
            Label:
                id: third_ozn
                text_size: self.size
                halign: "center"
                valign: "middle"
                text: "Wpisz oznaczenie kształtu płytki"
                font_size: 24

            TextInput:
                id: word_input
                multiline: False
                size_hint: (1, .5)

            Label:
                id: third_opis
                text_size: self.size
                halign: "center"
                valign: "middle"
                text: "Dodaj opis kształtu"
                font_size: 24

            TextInput:
                id: word_input2
                multiline: False
                size_hint: (1, .5)

        Button:
            size_hint: (1, .5)
            font_size: 24
            text: "Dodaj kształt płytki do bazy"
            on_press: app.submit()


        Button:
            size_hint: (1, .5)
            font_size: 24
            text: "Pokaż kształty płytki będące już w bazie danych"
            on_press: app.show_records()

        Button:
            text: "Cofnij"
            on_release:
                app.root.current = "third"
                root.manager.transition.direction = "right"

        Button:
            text: "Wyjdź"
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"

